{
  "schemaVersion": 1,
  "id": "${Mod.ID}",
  "version": "${Mod.VERSION}",

  "name": "${Mod.NAME}",
  "description": "${Mod.DESCRIPTION}",
  "contact": {
    "homepage": "${Mod.Contact.HOMEPAGE}",
    "issues": "${Mod.Contact.ISSUES}"
  },
  "authors": [
    "${Mod.AUTHOR}"
  ],

  "license": "${Mod.LICENSE}",

  "environment": "*",
  "entrypoints": {
    "mm:early_risers": [
      "dev.andreblanke.mcmods.modid.asm.EarlyRiser"
    ],
    "main": [
      {
        "adapter": "kotlin",
        "value": "dev.andreblanke.mcmods.modid.ModFabric"
      }
    ],
    "modmenu": [
      "dev.andreblanke.mcmods.modid.integration.ModMenuIntegration"
    ]
  },
  "mixins": [
    "modid.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric-language-kotlin": ">=1.6.5+kotlin.1.5.31",
    "fabric": "*",
    "minecraft": "1.17.x",
    "java": ">=16",
    "mm": ">=2.3"
  }
}

{
  "schemaVersion": 1,
  "id": "${Mod.ID}",
  "version": "${Mod.VERSION}",

  "name": "${Mod.NAME}",
  "description": "${Mod.DESCRIPTION}",
  "contact": {
    "homepage": "${Mod.Contact.HOMEPAGE}",
    "issues": "${Mod.Contact.ISSUES}"
  },
  "authors": [
    "${Mod.AUTHOR}"
  ],

  "license": "${Mod.LICENSE}",

  "environment": "*",
  "entrypoints": {
    "mm:early_risers": [
      "${package}.asm.EarlyRiser"
    ],
    "main": [
      {
        "adapter": "kotlin",
        "value": "${package}.${modName}Fabric"
      }
    ],
    "modmenu": [
      "${package}.integration.ModMenuIntegration"
    ]
  },
  "mixins": [
    "${modId}.mixins.json"
  ],

  "depends": {
    "fabricloader": "*",
    "fabric-language-kotlin": "*",
    "fabric": "*",
    "minecraft": ">=1.18",
    "java": ">=17",
    "mm": ">=2.3"
  }
}
